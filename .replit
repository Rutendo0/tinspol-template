modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export DATABASE_URL=\"file:./prisma/dev.db\" && export NEXTAUTH_SECRET=\"tinspol-replit-development-secret-2024\" && export NEXTAUTH_URL=\"https://$REPL_SLUG--$REPL_OWNER.repl.co\" && export ADMIN_EMAIL=\"admin@tinspol.com\" && export ADMIN_PASSWORD=\"admin123\" && export CLOUDINARY_CLOUD_NAME=\"demo-cloud\" && export CLOUDINARY_API_KEY=\"123456789012345\" && export CLOUDINARY_API_SECRET=\"demo-api-secret-key\" && pnpm dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["pnpm"]
build = ["pnpm", "build"]
